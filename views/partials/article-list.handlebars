{{!-- partials/article-list.handlebars --}}
{{#if articles.length}}
  <div class="articles">
    <h3 class="page-title title-large">Current Articles:</h3>
    <div class="article-header">
      <div class="header-details">
        <div class="col-header">Date Updated</div>
        <div class="col-header">Article Image</div>
        <div class="col-header">Article Title</div>
        <div class="col-header">Delete</div>
        <div class="col-header">Edit</div>
      </div>
    </div>
    <div class="list-container">
      {{#each articles as |article|}}
      <div class="article-row row mb-2 flex justify-between items-center border-b border-gray-200 py-2">
        <div class="col-md-2 article-date">
          <p>{{format_date article.date_created}}</p>
        </div>
        <div class="col-md-2 article-image">
          {{#if article.image_url}}
          <img src="{{article.image_url}}" alt="{{article.title}}" class="img-thumbnail" style="max-height: 50px;">
          {{else}}
          <p>No image</p>
          {{/if}}
        </div>
        <div class="col-md-4 article-title">
          <h4><a href="/article/{{article.id}}" class="text-blue-500 hover:underline">{{article.title}}</a></h4>
          <p class="article-content">{{article.description}}</p>
        </div>
        <div class="col-md-2 article-delete">
          <button class="btn btn-danger bg-red-500 text-white py-2 px-4 rounded hover:bg-red-600" data-id="{{article.id}}" data-type="article">DELETE</button>
        </div>
        <div class="col-md-2 article-edit">
          <button class="btn btn-primary bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-600" data-id="{{article.id}}" data-type="article">EDIT</button>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
{{else}}
  <p class="text-center">You have no articles yet!</p>
{{/if}}
